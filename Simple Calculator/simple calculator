#include <iostream>
using namespace std;

int main() {
    cout << "Simple Calculator" << endl;

    double num1, num2, result;
    char operation;

    cout << "Enter two Numbers " << endl;
    cin >> num1 >> num2;

    cout << "Choose the Required Operation  (+, -, *, /): ";
    cin >> operation;

    switch (operation) {
        case '+': result = num1 + num2; break;
        case '-': result = num1 - num2; break;
        case '*': result = num1 * num2; break;
        case '/': result = num1 / num2; break;
    }

    cout << "Result: " << num1 << operation <<  num2 << " = " << result << endl;
    
    return 0;
}
